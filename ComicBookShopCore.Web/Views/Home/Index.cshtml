@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
    Model.GetData();
}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin: 30px 30px 30px 30px;">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner" style="height: 400px; background-color: black">
            @{
                var premieresCount = Model.PremieresList.Count();
                var listCount = Model.ViewList.Count();
                var j = 0;
                for (int i = 0; i < 5; i++)
                {
                    if (premieresCount > i && i != 0)
                    {
                        <div class="carousel-item">
                            <img class="d-block  mx-auto" style="max-height:400px;" src="~/images/ComicBooks/@Model.PremieresList[i].Id/1.jpeg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.PremieresList[i].Title</h5>
                                <p>Release Date: @Model.PremieresList[i].OnSaleDate.ToShortDateString() </p>
                            </div>
                        </div>
                    }
                    else if (premieresCount > i && i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block  mx-auto" style="max-height:400px;" src="~/images/ComicBooks/@Model.PremieresList[i].Id/1.jpeg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.PremieresList[i].Title</h5>
                                <p>Release Date: @Model.PremieresList[i].OnSaleDate.ToShortDateString()</p>
                            </div>
                        </div>
                    }
                    else if (listCount > j && i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block  mx-auto" style="max-height:400px;" src="~/images/ComicBooks/@Model.ViewList[j].Id/1.jpeg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.ViewList[j].Title</h5>
                                <p>Release Date: @Model.ViewList[j].OnSaleDate.ToShortDateString()</p>
                            </div>
                        </div>
                        j++;
                    } else if( listCount > j)
                    {
                        <div class="carousel-item">
                            <img class="d-block  mx-auto" style="max-height:400px;" src="~/images/ComicBooks/@Model.ViewList[j].Id/1.jpeg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.ViewList[j].Title</h5>
                                <p>Release Date: @Model.ViewList[j].OnSaleDate.ToShortDateString()</p>
                            </div>
                        </div>
                        j++;
                    }
                    else if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src=".../800x400?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src=".../800x400?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide">
                        </div>
                    }
                }
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
<section class="container-fluid">
    @{
    for (int i = 0; i < 9; i++)
    {
        if (listCount > i)
        {
                <div class="card border-dark float-sm-left d-sm-flex justify-content-center" style="width: 18rem; height:45rem; margin:10px 10px 10px 10px;">
                    <img class="card-img-top" src="~/images/ComicBooks/@Model.ViewList[i].Id/1.jpeg" alt="Card image cap">
                    <div class="card-body flex-column d-flex">
                        <h5 class="card-title" style="font-weight:bold;">@Model.ViewList[i].Title</h5>
                        <p class="card-text">@Model.ViewList[i].ShortDescription</p>
                        <h6><b>On Sale From:</b> @Model.ViewList[i].OnSaleDate.ToShortDateString()</h6>
                        <h6 class="price">Price: $@Model.ViewList[i].Price</h6>
                        <div class="align-self-end"><a href="#" class="btn btn-primary mt-auto align-self-end">Show Details</a></div>
                    </div>
                    </div>
            }
            else
            {
                break;
            }
        }
    }
</section>