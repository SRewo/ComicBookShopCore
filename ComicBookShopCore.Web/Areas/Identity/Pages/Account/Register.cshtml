@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.FirstName"></label>
                <input asp-for="Input.User.FirstName" class="form-control" />
                <span asp-validation-for="Input.User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.LastName"></label>
                <input asp-for="Input.User.LastName" class="form-control" />
                <span asp-validation-for="Input.User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.DateOfBirth"></label>
                <input asp-for="Input.User.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.User.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Address.StreetName"></label>
                <input asp-for="Input.User.Address.StreetName" class="form-control" />
                <span asp-validation-for="Input.User.Address.StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Address.City"></label>
                <input asp-for="Input.User.Address.City" class="form-control" />
                <span asp-validation-for="Input.User.Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Address.PostalCode"></label>
                <input asp-for="Input.User.Address.PostalCode" class="form-control" />
                <span asp-validation-for="Input.User.Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Address.Country"></label>
                <input asp-for="Input.User.Address.Country" class="form-control" />
                <span asp-validation-for="Input.User.Address.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.User.Address.Region"></label>
                <input asp-for="Input.User.Address.Region" class="form-control" />
                <span asp-validation-for="Input.User.Address.Region" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
